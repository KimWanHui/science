    <script>
        // 전역 변수
        let hasHole = false;
        let holeSize = 3;
        let balloonPressure = 100;
        let bottlePressure = 100;
        let isRunning = false;
        let particles = [];

        // DOM 요소
        const holeSwitch = document.getElementById('holeSwitch');
        const holeSizeSlider = document.getElementById('holeSizeSlider');
        const pressureSlider = document.getElementById('pressureSlider');
        const startBtn = document.getElementById('startBtn');
        const resetBtn = document.getElementById('resetBtn');
        const balloon = document.getElementById('balloon');
        const holeIndicator = document.getElementById('holeIndicator');
        const gaugeFill = document.getElementById('gaugeFill');
        const statusMessage = document.getElementById('statusMessage');
        const observationText = document.getElementById('observationText');
        const explanationText = document.getElementById('explanationText');
        const particlesContainer = document.getElementById('particlesContainer');

        // 이벤트 리스너
        holeSwitch.addEventListener('change', (e) => {
            hasHole = e.target.checked;
            holeIndicator.classList.toggle('visible', hasHole);
        });

        holeSizeSlider.addEventListener('input', (e) => {
            holeSize = parseInt(e.target.value);
            document.getElementById('holeSizeValue').textContent = holeSize;
        });

        pressureSlider.addEventListener('input', (e) => {
            balloonPressure = parseInt(e.target.value);
            document.getElementById('pressureValue').textContent = balloonPressure;
        });

        startBtn.addEventListener('click', startExperiment);
        resetBtn.addEventListener('click', resetExperiment);

        // 입자 생성
        function createParticles(count) {
            particlesContainer.innerHTML = '';
            particles = [];
            
            for (let i = 0; i < count; i++) {
                const particle = document.createElement('div');
                particle.className = 'particle';
                particle.style.left = Math.random() * 90 + '%';
                particle.style.top = Math.random() * 90 + '%';
                particle.style.animationDelay = Math.random() * 3 + 's';
                particle.style.animationDuration = (2 + Math.random() * 2) + 's';
                particlesContainer.appendChild(particle);
                particles.push(particle);
            }
        }

        // 실험 시작
        function startExperiment() {
            if (isRunning) return;
            isRunning = true;
            startBtn.disabled = true;
            
            showStatus('🔬 실험을 시작합니다...');
            
            // 초기 입자 생성
            createParticles(hasHole ? 20 : 40);
            
            setTimeout(() => {
                if (hasHole) {
                    // 구멍이 있는 경우: 풍선 팽창
                    balloon.classList.add('inflated');
                    
                    // 압력 감소 애니메이션
                    let currentPressure = 100;
                    const targetPressure = 100 - (holeSize * 10);
                    const interval = setInterval(() => {
                        if (currentPressure > targetPressure) {
                            currentPressure -= 2;
                            bottlePressure = currentPressure;
                            updatePressureGauge(currentPressure);
                            
                            // 입자 수 감소
                            if (particles.length > 10 && Math.random() > 0.7) {
                                const particle = particles.pop();
                                if (particle && particle.parentNode) {
                                    particle.parentNode.removeChild(particle);
                                }
                            }
                        } else {
                            clearInterval(interval);
                            showStatus('✅ 풍선이 팽창했습니다!');
                            updateResults(true);
                        }
                    }, 100);
                    
                } else {
                    // 구멍이 없는 경우: 풍선 팽창 실패
                    showStatus('❌ 풍선이 불리지 않습니다!');
                    
                    // 압력 증가 시뮬레이션
                    let currentPressure = 100;
                    const targetPressure = 110;
                    const interval = setInterval(() => {
                        if (currentPressure < targetPressure) {
                            currentPressure += 1;
                            bottlePressure = currentPressure;
                            updatePressureGauge(currentPressure);
                        } else {
                            clearInterval(interval);
                            updateResults(false);
                        }
                    }, 100);
                }
                
                setTimeout(() => {
                    isRunning = false;
                    startBtn.disabled = false;
                }, 3000);
            }, 500);
        }

        // 압력 게이지 업데이트
        function updatePressureGauge(pressure) {
            const percentage = ((pressure - 50) / 100) * 100;
            gaugeFill.style.width = Math.max(0, Math.min(100, percentage)) + '%';
            gaugeFill.textContent = pressure + ' kPa';
        }

        // 상태 메시지 표시
        function showStatus(message) {
            statusMessage.textContent = message;
            statusMessage.classList.add('show');
            setTimeout(() => {
                statusMessage.classList.remove('show');
            }, 2000);
        }

        // 결과 업데이트
        function updateResults(inflated) {
            if (inflated) {
                observationText.innerHTML = `
                    <strong>✅ 풍선이 부풀어 올랐습니다!</strong><br><br>
                    • 페트병에 구멍을 뚫자 풍선이 팽창하기 시작했습니다.<br>
                    • 페트병 내부의 압력이 ${bottlePressure}kPa로 감소했습니다.<br>
                    • 공기 입자의 수가 감소하는 것을 관찰할 수 있습니다.
                `;
                
                explanationText.innerHTML = `
                    <strong>🧪 과학적 원리</strong><br><br>
                    구멍을 통해 페트병 내부의 공기가 외부로 빠져나가면서 
                    <strong>내부 압력이 감소</strong>했습니다. 
                    이에 따라 풍선 내부의 압력(${balloonPressure}kPa)이 
                    페트병 내부 압력보다 높아져 <strong>풍선이 팽창</strong>할 수 있게 되었습니다.<br><br>
                    💡 기체는 압력이 높은 곳에서 낮은 곳으로 이동합니다!
                `;
                
                // 그래프 업데이트
                document.getElementById('chartWithHole').style.height = '150px';
                document.getElementById('chartWithHole').textContent = '150%';
            } else {
                observationText.innerHTML = `
                    <strong>❌ 풍선이 부풀지 않았습니다!</strong><br><br>
                    • 입으로 풍선을 불려고 해도 풍선이 팽창하지 않습니다.<br>
                    • 페트병 내부의 압력이 ${bottlePressure}kPa로 오히려 증가했습니다.<br>
                    • 공기 입자들이 페트병 내부에 갇혀 있습니다.
                `;
                
                explanationText.innerHTML = `
                    <strong>🧪 과학적 원리</strong><br><br>
                    페트병이 밀폐되어 있어 풍선을 불 때 들어가려는 공기가 
                    <strong>페트병 내부의 기존 공기를 압축</strong>시킵니다. 
                    압축된 공기는 더 강한 압력으로 풍선을 밀어내어 
                    <strong>풍선의 팽창을 방해</strong>합니다.<br><br>
                    💡 기체는 부피를 차지하며, 압축되면 압력이 증가합니다! 
                    (보일의 법칙: PV = 일정)
                `;
                
                // 그래프 업데이트
                document.getElementById('chartNoHole').style.height = '50px';
                document.getElementById('chartNoHole').textContent = '50%';
            }
        }

        // 초기화
        function resetExperiment() {
            balloon.classList.remove('inflated');
            bottlePressure = 100;
            updatePressureGauge(100);
            createParticles(30);
            
            observationText.textContent = '실험을 시작하면 관찰 내용이 여기에 표시됩니다.';
            explanationText.textContent = '실험 결과에 대한 과학적 설명이 여기에 표시됩니다.';
            
            // 그래프 초기화
            document.getElementById('chartNoHole').style.height = '50px';
            document.getElementById('chartNoHole').textContent = '50%';
            document.getElementById('chartWithHole').style.height = '150px';
            document.getElementById('chartWithHole').textContent = '150%';
            
            showStatus('🔄 실험이 초기화되었습니다');
        }

        // 답변 확인
        function checkAnswers() {
            const answer1 = document.getElementById('answer1').value.trim();
            const answer2 = document.getElementById('answer2').value.trim();
            const answer3 = document.getElementById('answer3').value.trim();
            
            const feedback1 = document.getElementById('feedback1');
            const feedback2 = document.getElementById('feedback2');
            const feedback3 = document.getElementById('feedback3');
            
            // 답변 1 피드백
            if (answer1.length > 20) {
                const keywords = ['입자', '분자', '압력', '이동', '빠져나가', '감소'];
                const hasKeywords = keywords.some(keyword => answer1.includes(keyword));
                
                if (hasKeywords) {
                    feedback1.className = 'feedback correct show';
                    feedback1.innerHTML = '✅ 훌륭합니다! 구멍을 통해 페트병 내부의 공기 입자가 외부로 이동하여 압력이 감소한다는 점을 잘 설명했습니다.';
                } else {
                    feedback1.className = 'feedback hint show';
                    feedback1.innerHTML = '💡 힌트: 공기 입자(분자)의 이동과 압력 변화에 대해 생각해보세요.';
                }
            } else {
                feedback1.className = 'feedback hint show';
                feedback1.innerHTML = '💡 더 자세하게 설명해주세요. 입자 수준에서 무슨 일이 일어나는지 생각해보세요.';
            }
            
            // 답변 2 피드백
            if (answer2.length > 20) {
                const keywords = ['같', '평형', '외부', '내부', '균형'];
                const hasKeywords = keywords.some(keyword => answer2.includes(keyword));
                
                if (hasKeywords) {
                    feedback2.className = 'feedback correct show';
                    feedback2.innerHTML = '✅ 정확합니다! 페트병 내부와 외부의 압력이 같아진다는 의미입니다.';
                } else {
                    feedback2.className = 'feedback hint show';
                    feedback2.innerHTML = '💡 힌트: 페트병 내부 압력과 외부 대기압의 관계를 생각해보세요.';
                }
            } else {
                feedback2.className = 'feedback hint show';
                feedback2.innerHTML = '💡 페트병 내부와 외부의 압력 관계에 대해 설명해주세요.';
            }
            
            // 답변 3 피드백 (창의성)
            if (answer3.length > 20) {
                feedback3.className = 'feedback correct show';
                feedback3.innerHTML = '✅ 창의적인 아이디어입니다! 과학 원리를 재미있게 표현하는 것이 중요합니다.';
            } else {
                feedback3.className = 'feedback hint show';
                feedback3.innerHTML = '💡 자유롭게 상상력을 발휘해보세요!';
            }
        }

        // 초기 설정
        window.onload = function() {
            createParticles(30);
            updatePressureGauge(100);
        };
    </script>
</body>
</html>
